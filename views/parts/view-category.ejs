<!-- Ver categoria -->
<section class="products container highlight">
  <div class="products__text">
    <h2>Selected products</h2>
  </div>
  <div class="products__card grid view">
    <% productsList.forEach(product => { %>
    <div>
      <img src="<%= product.image %>" alt="<%= product.altText %>" />
      <h3><%= product.name %></h3>
      <p><%= product.price %></p>
      <a
        class="products__card--view"
        href="#"
        method="POST"
        data-id="<%= product.id %>"
      >
        View the product
      </a>
    </div>
    <% }) %>
  </div>
</section>
