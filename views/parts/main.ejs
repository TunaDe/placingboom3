<!-- Banner -->
<section class="banner">
  <div class="banner__image"></div>
  <div class="banner__text">
    <h2>Placingboom.uk</h2>
    <h3>You can find the most suitable and affordable solutions for the concrete industry with us!</h3>
    <div class="banner__button">
      <a href="#placing&pumping" class="button__blue button">View the products</a>
    </div>
  </div>
</section>

<!-- Destaque -->
<section class="products container highlight" id="placing&pumping">
  <div class="products__text">
    <h2>Placing booms</h2>
    <a href="<%= `/ver&category=${starWars[0].category}` %>"
      >View the products <i class="icon-arrow-right"></i
    ></a>
  </div>
  <div class="products__card grid">
    <% starWars.forEach(product => { %>
    <div>
      <img src="<%= product.image %>" alt="<%= product.altText %>" />
      <h3><%= product.name %></h3>
      <p><%= product.price %></p>
      <a
        class="products__card--view"
        href="#"
        method="POST"
        data-id="<%= product.id %>"
      >
        View the product
      </a>
    </div>
    <% }) %>
  </div>
</section>

